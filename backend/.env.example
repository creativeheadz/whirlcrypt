# Whirlcrypt Backend Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5433
DB_NAME=whirlcrypt_dev
DB_USER=whirlcrypt_user
DB_PASSWORD=whirlcrypt_password
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=true

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=
REDIS_DB=0

# Storage Configuration
STORAGE_PROVIDER=local
UPLOAD_DIR=./uploads
STORAGE_CREATE_SUBDIRS=true

# S3 Storage Configuration (if using S3)
# S3_BUCKET=my-whirlcrypt-bucket
# S3_REGION=us-east-1
# S3_ACCESS_KEY_ID=your-access-key
# S3_SECRET_ACCESS_KEY=your-secret-key
# S3_ENDPOINT=https://s3.us-east-1.amazonaws.com
# S3_PREFIX=whirlcrypt/

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# File Configuration
DEFAULT_RETENTION_HOURS=24
MAX_RETENTION_HOURS=168
MAX_FILE_SIZE=104857600
CLEANUP_INTERVAL_MINUTES=60
ALLOWED_EXTENSIONS=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100